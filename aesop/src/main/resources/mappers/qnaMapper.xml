<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="qna">

	<!-- 총 질문 빛 답변 수 -->
	<select id="getTotalCount" resultType="int">
		select COUNT(*) from qna
	</select>

	<!-- has a 관계 설정 -->
	<resultMap type="qna" id="qnaRM">
		<result property="member.email" column="email"/>
		<result property="member.name" column="name"/>
	</resultMap>
	
	<!-- 묻고 답하기 목록 조회 -->
	<!-- <select id="getQnaList" parameterType="pagingBean" resultMap="qnaRM"> -->
	<select id="getQnaList" parameterType="pagingBean" resultMap="qnaRM">
		select q.no, q.title, q.content, q.lev, q.parno, q.hits, q.resdate, m.email, m.name 
			from qna q, member m 
			where q.email=m.email order by q.resdate desc  
			
		<!-- limit 0, 5; limit #{startRowNumber}, #{contentNumberPerPage}  -->
	</select>	
	
	
</mapper>