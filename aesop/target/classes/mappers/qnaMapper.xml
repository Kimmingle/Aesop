<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="qna">

	<!-- 총 질문 빛 답변 수 -->
	<select id="getTotalCount" resultType="int">
		select COUNT(*) from qna
	</select>

	<!-- has a 관계 설정 -->
	<resultMap type="qna" id="qnaRM">
		<result property="member.email" column="email"/>
		<result property="member.name" column="name"/>
	</resultMap>
	
	<!-- 묻고 답하기 목록 조회 -->
	<!-- <select id="getQnaList" parameterType="pagingBean" resultMap="qnaRM"> -->
	<select id="getQnaList" parameterType="pagingBean" resultMap="qnaRM">
	
	select * from qna order by resdate desc
	<!--	select q.no, q.title, q.content, q.lev, q.parno, q.hits, q.resdate, m.email, m.name 
			from qna q, member m 
			where q.email=m.email order by q.resdate desc  -->
			
		<!-- limit 0, 5; limit #{startRowNumber}, #{contentNumberPerPage}  -->
	</select>	
	
	<!-- 묻고 답하기 상세 보기 -->
	<select id="getQna" resultMap="qnaRM">
		<!--  select q.no, q.title, q.content, q.lev, q.parno, q.hits, q.resdate, m.email, m.name 
		from qna q, member m 
		where q.email=m.email and no=#{no}-->
		select * from qna where no=#{no}
		
	</select>
	
	<!-- 묻고 답하기 글 조회수 증가 -->
	<update id="hitsCount">
		update qna set hits=hits+1 where no=#{no}
	</update>
	
	<!-- 문의 등록 -->
 	<insert id="insQna" parameterType="com.aesop.domain.Qna">
        INSERT INTO qna (no, title, content, name, hits, resdate, email,qnaImg1, qnaImg2, qnaImg3) 
        VALUES (default, #{title},#{content}, #{member.name}, default, default,#{member.email}, #{qnaImg1}, #{qnaImg2}, #{qnaImg3})
    </insert>
	
	 <update id="upQna" parameterType="com.aesop.domain.Qna">
        UPDATE qna 
        SET title = #{title}, 
            content = #{content}, 
            img1 = #{qnaImg1}, 
            img2 = #{qnaImg2}, 
            img3 = #{qnaImg3}, 
        WHERE no = #{no}
    </update>
	
	
	
</mapper>